<Window x:Class="KnightElfServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnightElfServer"
        mc:Ignorable="d"
        Title="KnightElf ServerApp" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <ToolBarPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">
                <Button x:Name="Settings" Content="{StaticResource SettingsIcon}" Height="28" BorderBrush="{x:Null}" Width="28" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"/>
                <Button x:Name="Connect" Content="{StaticResource ConnectIcon}" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Width="28" BorderBrush="{x:Null}" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"/>
                <Button x:Name="Disconnect" Content="{StaticResource DisconnectIcon}" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Width="28" BorderBrush="{x:Null}" RenderTransformOrigin="3.773,0.433" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"/>
            </ToolBarPanel>

            <StatusBar DockPanel.Dock="Bottom" Grid.Row="3" Grid.ColumnSpan="2" Height="20" FontSize="10" FlowDirection="RightToLeft">
                <Label x:Name="label" Content="Status" RenderTransformOrigin="0.492,0.534" Padding="0" Margin="0.5,0"/>
                <Separator />
                <Label x:Name="labelIPaddr" Content="0.0.0.0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Right" Padding="0" RenderTransformOrigin="0.492,0.534" Margin="0.5,0" HorizontalAlignment="Right" FlowDirection="LeftToRight"/>
                <Label Content="Selected IP:" Padding="0" FlowDirection="LeftToRight"/>
            </StatusBar>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="212*"/>
                    <ColumnDefinition Width="307*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Clipboard content" ClipToBounds="True" Grid.Column="1" Margin="10,54,10.4,9.8" FontSize="10" BorderThickness="0">
                    <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="10,10,3.6,3">
                        <ScrollViewer>
                            <TextBlock x:Name="textBlock3" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </GroupBox>
                <GroupBox ClipToBounds="True" Margin="10,54,10,9.8" Header="Log console" BorderThickness="0" FontSize="10">
                    <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="10,10,-2.8,3">
                        <ScrollViewer>
                            <TextBlock x:Name="textBlock1" Background="Black" Foreground="White" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </GroupBox>
            </Grid>

        </DockPanel>
    </Grid>
</Window>
