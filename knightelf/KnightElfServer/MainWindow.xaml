<Window x:Class="KnightElfServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnightElfServer"
        mc:Ignorable="d"
        Title="KnightElf ServerApp" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="277*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition MaxHeight="15" MinHeight="15" Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False" Grid.Row="0" Margin="0,0,0.4,3" MinHeight="{Binding ActualHeight, ElementName=Settings, Mode=Default}" MinWidth="197" Grid.ColumnSpan="2">
            <Button x:Name="Settings" Content="{StaticResource SettingsIcon}" Margin="0.5,0.5,0,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="28" Height="28"/>
            <Button x:Name="Connect" Content="{StaticResource ConnectIcon}" Height="28" Margin="0.5,0.5,0.1,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="28"/>
            <Button x:Name="Disconnect" Content="{StaticResource DisconnectIcon}" Height="28" Margin="0.5,0.5,0,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="28"/>
        </DockPanel>
        <StatusBar Margin="0,0,0.4,-0.2" Grid.Row="3" Height="15" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <GroupBox x:Name="groupBox" Header="Log Console" Margin="10" Grid.Row="2" UseLayoutRounding="False" BorderThickness="0" ClipToBounds="True">
            <ScrollViewer Margin="10,10,-3,3.8" Padding="0.5,4,0.5,0.5" ClipToBounds="True" Background="Black">
                <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Width="176" Height="176" Background="Black" Foreground="White"/>
            </ScrollViewer>
        </GroupBox>
        <GroupBox x:Name="groupBox_Copy1" Header="Clipboard content" Margin="10" Grid.Row="2" UseLayoutRounding="False" BorderThickness="0" ClipToBounds="True" Grid.Column="1">
            <ScrollViewer Margin="10,10,-3.2,3.8" Padding="0.5,4,0.5,0.5" ClipToBounds="True">
                <TextBlock x:Name="textBlock3" TextWrapping="Wrap" Height="175" Width="206"/>
            </ScrollViewer>
        </GroupBox>

    </Grid>
</Window>
